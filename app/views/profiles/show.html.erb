<div class='container mt-5 col-8'>
  <h1 id='info-title'> Personal Information </h1>

  <div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.first_name %></div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.last_name %></div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.email %></div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.birthdate %></div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.phone_number %></div>
    <div class='pb-3 mb-4 border-bottom info'><%= @user.address %></div>

    <div class="accordion-item mb-4 border rounded">
      <h2 class="accordion-header" id="heading">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse" aria-controls="collapse">
          <div  class="info">Your allergies</div>
        </button>
      </h2>
      <div id="collapse" class="accordion-collapse collapse" aria-labelledby="heading" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <% @user.allergies.each do |allergy| %>
          <div><%= allergy.allergy_type %></div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

<div class="d-flex justify-content-between mb-4">
  <%= link_to 'Back', dashboard_path, class: 'btn btn-primary' %>
  <%= link_to 'Edit Info', dashboard_edit_path, class: 'btn btn-primary' %>
  </div>
</div>
