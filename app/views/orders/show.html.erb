<div class='container mt-5'>
  <h1>Your Order Status</h1>
  <%= @order.order_date %>

  <div class="d-grid gap-3">
    <% @order.refills.each do |refill| %>
      <div class="p-2 bg-light border">
        <div>
          <img src="assets/pill.png" alt="pill" class="pill-icon"/>
          <%= refill.user_medication.medication.name %>
          <% if refill.status == 'received' %>
            <i class="paper fa-solid fa-file-circle-plus"></i>
          <% elsif refill.status == 'in process' %>
            <i class="gear fa-solid fa-gear"></i>
          <% elsif refill.status == 'ready' %>
            <i class="check fa-regular fa-circle-check"></i>
          <% end %>
        <%# </div>

        <div> %>
        </div>
      </div>
    <% end %>
  </div>
</div>
